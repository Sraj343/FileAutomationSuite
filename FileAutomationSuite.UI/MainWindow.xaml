<Window x:Class="FileAutomationSuite.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Data Processing Tool" Height="650" Width="1050"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT NAV -->
        <Border Background="#1A237E" Padding="10">
            <StackPanel>

                <TextBlock Text="MENU"
                           Foreground="White"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0 0 0 20"/>

                <!-- Excel Menu -->
                <Expander Header="Excel"
                          Foreground="White"
                          Background="#283593"
                          Padding="10"
                          Margin="0 0 0 10">

                    <StackPanel>

                        <!-- SMALL SUBMENU BUTTON -->
                        <Button Content="• Filter Excel Sheet"
                                Tag="ExcelFilter"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </Expander>

                <!-- BCP Menu -->
                <Expander Header="BCP"
                          Foreground="White"
                          Background="#283593"
                          Padding="10"
                          Margin="0 0 0 10">

                    <StackPanel>

                        <Button Content="• Excel → BCP File"
                                Tag="ExcelToBCP"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>

                        <Button Content="• BCP File → Database"
                                Tag="BCPToDB"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>

                        <Button Content="• Database Table → BCP File"
                                Tag="DBTableToBCP"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </Expander>

                <!-- Database Menu -->
                <Expander Header="Database"
                          Foreground="White"
                          Background="#283593"
                          Padding="10"
                          Margin="0 0 0 10">

                    <StackPanel>

                        <Button Content="• Excel → Database"
                                Tag="ExcelToDB"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>

                        <Button Content="• Database → Excel"
                                Tag="DBToExcel"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>

                        <Button Content="• Database → BCP File"
                                Tag="DBToBCP"
                                Click="NavButton_Click"
                                Margin="0 4"
                                Padding="6 3"
                                Background="#283593"
                                Foreground="White"
                                FontWeight="Bold"
                                BorderThickness="0"
                                HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </Expander>

            </StackPanel>
        </Border>

        <!-- MAIN CONTENT -->
        <Border Grid.Column="1"
                Background="#ECEFF1"
                Padding="10">
            <Frame x:Name="MainContent" NavigationUIVisibility="Hidden"/>
        </Border>

    </Grid>
</Window>
