<Page x:Class="FileAutomationSuite.UI.Views.ExcelToDBTable"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="900">

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Excel To Database Table"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Excel File Selection -->
        <Border Grid.Row="1"
                Padding="12"
                CornerRadius="6"
                BorderBrush="Gray"
                BorderThickness="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Excel File:"
                           VerticalAlignment="Center"
                           FontWeight="SemiBold"/>

                <TextBox x:Name="ExcelFileTextBox"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,0"
                         IsReadOnly="True"/>

                <Button Grid.Column="2"
                        Content="Browse"
                        Height="30"
                        Width="100"
                        Click="BrowseButton_Click"/>
            </Grid>
        </Border>

        <!-- Database Configuration -->
        <Border Grid.Row="2"
                Margin="0,15,0,15"
                Padding="12"
                CornerRadius="6"
                BorderBrush="Gray"
                BorderThickness="1">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="160"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0"
                           Grid.ColumnSpan="2"
                           Text="Database Configuration"
                           FontSize="16"
                           FontWeight="Bold"
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1"
                           Text="Connection String:"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="DbConnectionTextBox"
                         Grid.Row="1"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,5"/>

                <TextBlock Grid.Row="2"
                           Text="Table Name:"
                           VerticalAlignment="Center"/>

                <TextBox x:Name="TableNameTextBox"
                         Grid.Row="2"
                         Grid.Column="1"
                         Height="30"
                         Margin="10,5"/>

                <!-- Status / Logs -->
                <TextBox x:Name="StatusTextBox"
                         Grid.Row="3"
                         Grid.ColumnSpan="2"
                         Margin="0,10,0,0"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         IsReadOnly="True"
                         TextWrapping="Wrap"/>
            </Grid>
        </Border>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,10,0,0">

            <Button Content="Preview Data"
                    Width="120"
                    Height="35"
                    Margin="0,0,10,0"
                    Click="PreviewButton_Click"/>

            <Button Content="Upload to DB"
                    Width="140"
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"
                    Click="UploadButton_Click"/>
        </StackPanel>

    </Grid>
</Page>
