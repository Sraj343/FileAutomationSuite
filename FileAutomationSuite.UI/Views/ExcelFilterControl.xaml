<Page x:Class="FileAutomationSuite.UI.Views.ExcelFilterControl"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileAutomationSuite.UI.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="Excel Filter Control">

    <Grid Background="#f0f0f0" Margin="10">

        <!-- Main Container -->
        <Border BorderBrush="LightGreen"
                BorderThickness="2"
                CornerRadius="6"
                Padding="20"
                Margin="10"
                Background="White">

            <Grid HorizontalAlignment="Center" Width="520">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- ===== INPUT FILE ===== -->
                <TextBlock Text="Upload Excel File:"
                           VerticalAlignment="Center"
                           Grid.Row="0"
                           Grid.Column="0"
                           Margin="5"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="0"
                            Grid.Column="1">
                    <Button Content="Browse..."
                            Width="120"
                            Margin="5"
                            Click="UploadExcel_Click"/>
                    <TextBox x:Name="txtInputPath"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="5 0 0 0"
                             ToolTip="Selected Excel file path"/>
                </StackPanel>

                <!-- ===== OUTPUT PATH ===== -->
                <TextBlock Text="Select Output Path:"
                           VerticalAlignment="Center"
                           Grid.Row="1"
                           Grid.Column="0"
                           Margin="5"/>

                <StackPanel Orientation="Horizontal"
                            Grid.Row="1"
                            Grid.Column="1">
                    <Button Content="Browse..."
                            Width="120"
                            Margin="5"
                            Click="SelectOutputPath_Click"/>
                    <TextBox x:Name="txtOutputPath"
                             IsReadOnly="True"
                             BorderThickness="0"
                             Background="Transparent"
                             VerticalAlignment="Center"
                             Margin="5 0 0 0"
                             ToolTip="Selected output directory"/>
                </StackPanel>

                <!-- ===== FILTER COLUMN ===== -->
                <TextBlock Text="Filter Column Name:"
                           VerticalAlignment="Center"
                           Grid.Row="2"
                           Grid.Column="0"
                           Margin="5"/>

                <TextBox x:Name="txtFilterColumn"
                         Width="180"
                         Height="28"
                         Grid.Row="2"
                         Grid.Column="1"
                         Margin="5"
                         ToolTip="Enter Excel column name (e.g. Status, Date)"/>

                <!-- ===== OPTIONS ===== -->
                <TextBlock Text="Options:"
                           VerticalAlignment="Center"
                           Grid.Row="3"
                           Grid.Column="0"
                           Margin="5"/>

                <CheckBox x:Name="chkIsOriginal"
                          Content="Include original sheet in output"
                          VerticalAlignment="Center"
                          Grid.Row="3"
                          Grid.Column="1"
                          Margin="5 0 0 0"/>

                <!-- ===== SUBMIT BUTTON ===== -->
                <Button x:Name="btnSubmit"
                        Content="Submit"
                        Width="160"
                        Height="42"
                        Background="LightGreen"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderThickness="0"
                        HorizontalAlignment="Center"
                        Grid.Row="4"
                        Grid.Column="0"
                        Grid.ColumnSpan="2"
                        Margin="10 20 10 10"
                        Click="Submit_Click"/>

                <!-- ===== PROGRESS BAR ===== -->
                <ProgressBar x:Name="progressBar"
                             Grid.Row="5"
                             Grid.Column="0"
                             Grid.ColumnSpan="2"
                             Height="6"
                             Margin="10"
                             Visibility="Collapsed"
                             IsIndeterminate="True"/>
            </Grid>
        </Border>
    </Grid>
</Page>
