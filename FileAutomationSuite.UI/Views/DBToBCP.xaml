<Page x:Class="FileAutomationSuite.UI.Views.DBToBCP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileAutomationSuite.UI.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="DBToBCP">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="100"/>
        </Grid.ColumnDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Grid.ColumnSpan="3"
                   Text="Database to BCP Export"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,20"/>

        <!-- Connection String -->
        <TextBlock Grid.Row="1" Grid.Column="0"
                   Text="Connection String:"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="ConnectionStringTextBox"
                 Grid.Row="1" Grid.Column="1"
                 Height="28"
                 Text="{Binding ConnectionString}"
                 Margin="5"/>

        <!-- Table Name -->
        <TextBlock Grid.Row="2" Grid.Column="0"
                   Text="Table Name:"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="TableNameTextBox"
                 Grid.Row="2" Grid.Column="1"
                 Height="28"
                 Text="{Binding TableName}"
                 Margin="5"/>

        <!-- Output Folder -->
        <TextBlock Grid.Row="3" Grid.Column="0"
                   Text="Output Folder:"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="OutputFolderTextBox"
                 Grid.Row="3" Grid.Column="1"
                 Height="28"
                 Text="{Binding OutputFolderPath}"
                 Margin="5"/>

        <Button Grid.Row="3" Grid.Column="2"
                Content="Browse"
                Height="28"
                Margin="5"
                Command="{Binding BrowseFolderCommand}"/>

        <!-- BCP File Name -->
        <TextBlock Grid.Row="4" Grid.Column="0"
                   Text="BCP File Name:"
                   VerticalAlignment="Center"/>

        <TextBox x:Name="BcpFileNameTextBox"
                 Grid.Row="4" Grid.Column="1"
                 Height="28"
                 Text="{Binding BcpFileName}"
                 Margin="5"/>

        <!-- Export Button -->
        <Button Grid.Row="4" Grid.Column="2"
                Content="Export"
                Height="30"
                Margin="5"
                Background="#007ACC"
                Foreground="White"
                Command="{Binding ExportToBcpCommand}"/>

        <!-- Status / Log -->
        <GroupBox Grid.Row="5"
                  Grid.ColumnSpan="3"
                  Header="Status / Logs"
                  Margin="0,15,0,0">

            <TextBox Text="{Binding StatusMessage}"
                     IsReadOnly="True"
                     TextWrapping="Wrap"
                     VerticalScrollBarVisibility="Auto"/>
        </GroupBox>

    </Grid>
</Page>
