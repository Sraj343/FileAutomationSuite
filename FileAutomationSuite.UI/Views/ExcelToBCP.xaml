<Page x:Class="FileAutomationSuite.UI.Views.ExcelToBCP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      mc:Ignorable="d"
      d:DesignHeight="500"
      d:DesignWidth="800"
      Title="Excel To BCP">

    <!-- ================= Page Resources ================= -->
    <Page.Resources>

        <!-- Rounded Button Style -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004A7C"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Modern TextBox Style -->
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Height" Value="34"/>
            <Setter Property="Padding" Value="6"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

    </Page.Resources>

    <!-- ================= Layout ================= -->
    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ================= Header ================= -->
        <TextBlock Text="Excel to BCP TXT Converter"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#007ACC"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,30"/>

        <!-- ================= Excel File ================= -->
        <Grid Grid.Row="1" Margin="0,0,0,22">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Excel File"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>

            <TextBox x:Name="TxtExcelPath"
                     Grid.Row="1"
                     Grid.Column="0"
                     Style="{StaticResource ModernTextBox}"
                     IsReadOnly="True"
                     Focusable="False"
                     Margin="0,0,10,0"/>

            <Button Content="Browse"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="BrowseExcel_Click"/>
        </Grid>

        <!-- ================= Output TXT ================= -->
        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Output TXT File"
                       Grid.Row="0"
                       Grid.ColumnSpan="2"
                       FontWeight="SemiBold"
                       Margin="0,0,0,6"/>

            <TextBox x:Name="TxtOutputPath"
                     Grid.Row="1"
                     Grid.Column="0"
                     Style="{StaticResource ModernTextBox}"
                     IsReadOnly="True"
                     Focusable="False"
                     Margin="0,0,10,0"/>

            <Button Content="Browse"
                    Grid.Row="1"
                    Grid.Column="1"
                    Style="{StaticResource RoundedButtonStyle}"
                    Click="BrowseTxt_Click"/>

            <!-- ================= Log ================= -->
            <TextBox x:Name="TxtLog"
                     Grid.Row="2"
                     Grid.ColumnSpan="2"
                     Height="160"
                     Margin="0,20,0,0"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     TextWrapping="Wrap"
                     Padding="8"
                     BorderBrush="#CCCCCC"
                     BorderThickness="1"
                     Background="#FAFAFA"/>
        </Grid>

        <!-- ================= Buttons ================= -->
        <StackPanel Grid.Row="3"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,28,0,0">
            <Button Content="Read Columns"
                    Width="160"
                    Margin="0,0,12,0"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#FFA500"
                    Click="ReadColumns_Click"/>

            <Button Content="Convert To BCP TXT"
                    Width="200"
                    Style="{StaticResource RoundedButtonStyle}"
                    Background="#28A745"
                    Click="Convert_Click"/>
        </StackPanel>

    </Grid>
</Page>
