<Page x:Class="FileAutomationSuite.UI.Views.DBTableToBCP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FileAutomationSuite.UI.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="DB Table To BCP Export"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Main Form -->
        <Border Grid.Row="1"
                Padding="20"
                Background="#F5F5F5"
                BorderBrush="#DDDDDD"
                BorderThickness="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Connection String -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Connection String:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="ConnectionStringTextBox"
                         Grid.Row="0" Grid.Column="1"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- Database Name -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="Database Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="DatabaseNameTextBox"
                         Grid.Row="1" Grid.Column="1"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- Table Name -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Table Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="TableNameTextBox"
                         Grid.Row="2" Grid.Column="1"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- Output Folder -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="BCP Output Path:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <StackPanel Grid.Row="3" Grid.Column="1"
                            Orientation="Horizontal"
                            Margin="0,0,0,10">
                    <TextBox x:Name="OutputPathTextBox" Width="380" Height="30"/>
                    <Button Content="Browse"
                            Click="BrowseButton_Click"
                            Width="80"
                            Margin="10,0,0,0"/>
                </StackPanel>

                <!-- File Name -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="File Name:"
                           VerticalAlignment="Center"/>
                <TextBox x:Name="FileNameTextBox"
                         Grid.Row="4" Grid.Column="1"
                         Height="30"/>
            </Grid>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Clear"
                    Click="ClearButton_Click"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="Export To BCP"
                    Click="ExportToBcp_Click"
                    Width="150"
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
