<Page x:Class="FileAutomationSuite.UI.Views.DBTableToBCP"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:FileAutomationSuite.UI.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="*"/>
            <!-- Form -->
            <RowDefinition Height="Auto"/>
            <!-- Footer Buttons -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="DB Table To BCP Export"
                   FontSize="22"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Main Form -->
        <Border Grid.Row="1"
                Padding="20"
                Background="#F5F5F5"
                BorderBrush="#DDDDDD"
                BorderThickness="1">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="180"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="100"/>
                    <!-- For buttons inside rows like Browse -->
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Server -->
                    <RowDefinition Height="Auto"/>
                    <!-- User -->
                    <RowDefinition Height="Auto"/>
                    <!-- Password -->
                    <RowDefinition Height="Auto"/>
                    <!-- Database Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Table Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Output Path -->
                    <RowDefinition Height="Auto"/>
                    <!-- File Name -->
                </Grid.RowDefinitions>

                <!-- Server Name -->
                <TextBlock Grid.Row="0" Grid.Column="0"
                           Text="Server Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="ServerTextbox"
                         Grid.Row="0" Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- UserName -->
                <TextBlock Grid.Row="1" Grid.Column="0"
                           Text="UserName:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="UserNameTextBox"
                         Grid.Row="1" Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- Password -->
                <TextBlock Grid.Row="2" Grid.Column="0"
                           Text="Password:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <PasswordBox x:Name="PasswordBox"
                             Grid.Row="2" Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Height="30"
                             Margin="0,0,0,10"/>

                <!-- Database Name -->
                <TextBlock Grid.Row="3" Grid.Column="0"
                           Text="Database Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="DatabaseNameTextBox"
                         Grid.Row="3" Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- Table Name -->
                <TextBlock Grid.Row="4" Grid.Column="0"
                           Text="Table Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="TableNameTextBox"
                         Grid.Row="4" Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Height="30"
                         Margin="0,0,0,10"/>

                <!-- BCP Output Path -->
                <TextBlock Grid.Row="5" Grid.Column="0"
                           Text="BCP Output Path:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,10"/>
                <TextBox x:Name="OutputPathTextBox"
                         Grid.Row="5" Grid.Column="1"
                         Height="30"
                         Margin="0,0,10,10"
                         IsReadOnly="True"/>
                <Button Grid.Row="5" Grid.Column="2"
                        Content="Browse"
                        Height="30"
                        Width="80"
                        Click="BrowseButton_Click"
                        Margin="0,0,0,10"/>

                <!-- File Name -->
                <TextBlock Grid.Row="6" Grid.Column="0"
                           Text="File Name:"
                           VerticalAlignment="Center"
                           Margin="0,0,10,0"/>
                <TextBox x:Name="FileNameTextBox"
                         Grid.Row="6" Grid.Column="1"
                         Grid.ColumnSpan="2"
                         Height="30"
                         Margin="0,0,0,0"/>
            </Grid>
        </Border>

        <!-- Footer Buttons -->
        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,20,0,0">
            <Button Content="Clear"
                    Click="ClearButton_Click"
                    Width="100"
                    Height="35"
                    Margin="0,0,10,0"/>
            <Button Content="Export To BCP"
                    Click="ExportToBcp_Click"
                    Width="150"
                    Height="35"
                    Background="#007ACC"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Page>
