<Page x:Class="FileAutomationSuite.UI.Views.DBTableToExcel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:FileAutomationSuite.UI.Views"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="800"
      Title="DBTableToExcel">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="DB Table to Excel Export"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Database Selection -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Database:"
                       Width="120"
                       VerticalAlignment="Center"/>
            <ComboBox Width="250"
                      ItemsSource="{Binding DatabaseList}"
                      SelectedItem="{Binding SelectedDatabase}"/>
        </StackPanel>

        <!-- Table Name -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Table Name:"
                       Width="120"
                       VerticalAlignment="Center"/>
            <TextBox Width="250"
                     Text="{Binding TableName}"/>
        </StackPanel>

        <!-- Output Path -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Excel Path:"
                       Width="120"
                       VerticalAlignment="Center"/>
            <TextBox Width="350"
                     Text="{Binding OutputPath}"
                     IsReadOnly="True"/>
            <Button Content="Browse"
                    Width="80"
                    Margin="10,0,0,0"
                    Command="{Binding BrowseCommand}"/>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="4"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,30,0,0">

            <Button Content="Export to Excel"
                    Width="160"
                    Height="35"
                    Margin="10"
                    Command="{Binding ExportCommand}"/>

            <Button Content="Clear"
                    Width="100"
                    Height="35"
                    Margin="10"
                    Command="{Binding ClearCommand}"/>
        </StackPanel>

    </Grid>
</Page>
