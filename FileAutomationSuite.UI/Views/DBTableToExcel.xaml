<Page x:Class="FileAutomationSuite.UI.Views.DBTableToExcel"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="DB Table to Excel Export"
                   FontSize="20"
                   FontWeight="Bold"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

        <!-- Database -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Database:" Width="120"/>
            <ComboBox x:Name="DatabaseComboBox"
                      Width="250"
                      ItemsSource="{Binding DatabaseList}"
                      SelectedItem="{Binding SelectedDatabase}"/>
        </StackPanel>

        <!-- Table -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Table Name:" Width="120"/>
            <TextBox x:Name="TableNameTextBox"
                     Width="250"
                     Text="{Binding TableName}"/>
        </StackPanel>

        <!-- Path -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,10">
            <TextBlock Text="Excel Path:" Width="120"/>
            <TextBox x:Name="OutputPathTextBox"
                     Width="350"
                     IsReadOnly="True"
                     Text="{Binding OutputPath}"/>
            <Button Content="Browse"
                    Width="80"
                    Margin="10,0,0,0"
                    Click="BrowseButton_Click"/>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Grid.Row="4" Orientation="Horizontal"
                    HorizontalAlignment="Center" Margin="0,30,0,0">
            <Button Content="Export to Excel"
                    Width="160"
                    Height="35"
                    Margin="10"
                    Click="ExportButton_Click"/>
            <Button Content="Clear"
                    Width="100"
                    Height="35"
                    Margin="10"
                    Click="ClearButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
